<style>
  body{
    overflow: hidden;
  }
    .maincontainer{
        display: flex;
        justify-content: center;
        /* background:#079992; */
        background-image: url('/images/bg7.avif');
        background-size: cover;
        height: 100vh;
    }
    .root{
      max-width: 650px;
  width: 90%;
    height: 90%;
    max-height: 540px;
        background: #f1f2f6;
        padding: 20px;
        margin: 2% 2%;
        overflow-y:visible;
    }
    .heading{
        color: #078888;
        font-size: 30px;
        font-weight: bold;
        font-family: 'Tiro Telugu', serif;
        display: flex;
        justify-content: center;
        padding: 6px;
    }
    </style>
    
    <html>
        <head>
            <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@1,300&family=Tiro+Telugu&display=swap" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css2?family=Oxygen&family=Roboto:ital,wght@1,300&display=swap" rel="stylesheet">
     <!-- Compiled and minified CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    
     <!-- Compiled and minified JavaScript -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
     <script type="text/javascript" src="/public/js/materialize.min.js"></script>
             
        <link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet'>
    
         <!--Import Google Icon Font-->
          <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
          <!--Import materialize.css-->
          <link type="text/css" rel="stylesheet" href="/public/css/materialize.min.css"  media="screen,projection"/>
    
          <!--Let browser know website is optimized for mobile-->
          <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    
          <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
          <!-- Compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    
        <!-- Compiled and minified JavaScript -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
                
        </head>
    
        <body>
          <form action="/flight/editpicture" method="post" enctype="multipart/form-data">
            <div class="maincontainer">
               <div class="root">
                <div class="heading">
                   <span><img src="/images/airindia.png" width="55" alt="airindia" srcset=""></span> Edit Company Logo
                </div>
                <hr>
                <div class="row">
                    <div class="col s12" style="display: flex ;justify-content:center;">
                        <input type="hidden" name="flightid" value="<%=flightid%>">
                        <h3><%=companyname %></h3>
                            
                        </div>
                    </div>
                <div class="row">
                    <div class="col s12" style="display: flex ;justify-content:center;">
                        <img src="/images/<%=logo%>" alt="Company logo" width="270">
                            
                        </div>
                    </div>


                    <div class="row">
                        <div class="col s12">
                            <div class="file-field input-field">
                                <div class="btn">
                                  <span>File</span>
                                  <input required type="file" name="logo">
                                </div>
                                <div class="file-path-wrapper">
                                  <input class="file-path validate" type="text">
                                </div>
                              </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12" style='justify-content:center;'>
                          <button class="btn waves-effect waves-light" type="submit" name="action">Edit Logo
                            <i class="material-icons right">send</i>
                          </button>
                        </div>
                       
               </div>
            </div>
        </form>
    </body>
    </html>